{
	"name": "storepress-interactivity-api",
	"version": "0.0.1",
	"description": "A StorePress Plugin",
	"author": "EmranAhmed",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"external:build": "wp-scripts build --config webpack-package.config.js --webpack-copy-php --experimental-modules --webpack-no-externals",
		"build": "npm run start -- --no-watch && wp-scripts build --webpack-copy-php --experimental-modules",
		"format": "wp-scripts format ./src",
		"lint:css": "wp-scripts lint-style './src/**/*.scss'",
		"lint:js": "wp-scripts lint-js --format=pretty './src/**/*.js'",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "npm run package -- --zip",
		"start": "rm -rf ./build && npm run external:build && wp-scripts start --webpack-copy-php --experimental-modules",
		"postinstall": "git init -q && rm -rf ./.husky && npx husky init && echo \"npx lint-staged\" > .husky/pre-commit",
		"prebuild": "rm -rf ./build",
		"check-engines": "wp-scripts check-engines",
		"check-licenses": "wp-scripts check-licenses",
		"format:all": "npm run format:php && npm run format:css && npm run format:js",
		"format:js": "wp-scripts format './src/**/*.js'",
		"format:css": "wp-scripts format './src/**/*.scss'",
		"lint:css:report": "npm run lint:css -- --output-file scss-report.txt",
		"lint:css:fix": "npm run lint:css -- --fix",
		"lint:js:report": "npm run lint:js -- --format html --output-file lint-report.html",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"prepackage": "rm -rf ./${npm_package_name}.zip && npm run build",
		"package": "./tools/package.js",
		"test:e2e": "wp-scripts test-e2e",
		"test:unit": "wp-scripts test-unit-js",
		"prepare": "husky"
	},
	"dependencies": {
		"@wordpress/interactivity": "^6.30.0"
	},
	"devDependencies": {
		"@woocommerce/dependency-extraction-webpack-plugin": "^4.0.0",
		"@woocommerce/eslint-plugin": "^2.3.0",
		"@wordpress/base-styles": "^6.6.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^6.30.0",
		"@wordpress/scripts": "^30.23.0",
		"eslint-formatter-pretty": "^6.0.1",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-you-dont-need-lodash-underscore": "^6.14.0",
		"fs-extra": "^11.3.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"prettier": "npm:wp-prettier@^3.0.3",
		"webpack-remove-empty-scripts": "^1.1.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"sideEffects": [
		"src/**"
	],
	"module": "src/index.js",
	"files": [
		"src/**"
	],
	"zip": [
		"build/**",
		"index.html"
	]
}
